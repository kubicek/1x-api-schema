{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "title": "1X API - Order",
  "description": "Order reprezentuje objednávku zákazníka. Obsahuje více požadavků (Request)",
  "type": [
    "object"
  ],
  "definitions": {
    "id": {
      "description": "unique identifier of order",
      "example": "01234567-89ab-cdef-0123-456789abcdef",
      "format": "uuid",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "identity": {
      "$ref": "/schema/order#/definitions/id"
    },
    "external_id": {
      "description": "identifikátor objednávky v systému zákazníka",
      "example": "our_customer_invoice_35",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "requests": {
      "type": [
        "array"
      ],
      "items": {
        "$ref": "#/definitions/request"
      },
      "description": "Pole požadavků (Request)",
      "example": {
        "object_type": "contact",
        "handle": "KUBICEK",
        "request_type": "register"
      }
    }
  },
  "links": [
    {
      "description": "Podání nové objednávky.",
      "href": "/orders",
      "method": "POST",
      "rel": "create",
      "schema": {
        "properties": {
          "id": { "$ref": "#/definitions/order/definitions/id" },
          "requests": { "$ref": "#/definitions/order/definitions/requests"},
          "external_id": { "$ref": "#/definitions/order/definitions/external_id" }
        },
        "required": [
          "requests"
        ],
        "type": [
          "object"
        ]
      },
      "title": "Create"
    },
    {
      "description": "Informace o konkrétní objednávce.",
      "href": "/orders/{(%2Fschema%2Forder%23%2Fdefinitions%2Fidentity)}",
      "method": "GET",
      "rel": "self",
      "title": "Info"
    },
    {
      "description": "Seznam objednávek.",
      "href": "/orders",
      "method": "GET",
      "rel": "instances",
      "title": "List"
    }
  ],
  "properties": {
    "id": {
      "$ref": "/schema/order#/definitions/id"
    },
    "requests": {
      "$ref": "/schema/order#/definitions/requests"
    },
    "external_id": {
      "$ref": "/schema/order#/definitions/external_id"
    }
  },
  "id": "schema/order"
}
